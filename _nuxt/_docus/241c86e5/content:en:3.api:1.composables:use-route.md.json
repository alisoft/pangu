d\"}\n::\n\n::ReadMore{link=\"/guide/features/routing\"}\n::\n","ast":{"type":"root","children":[{"type":"element","tag":"prose-h1","props":{"class":"d-heading-title","id":"useroute"},"children":[{"type":"element","tag":"prose-code-inline","props":{},"children":[{"type":"text","value":"useRoute"}]}]},{"type":"text","value":"\n"},{"type":"element","tag":"prose-paragraph","props":{"class":"d-heading-description"},"children":[{"type":"text","value":"The "},{"type":"element","tag":"prose-code-inline","props":{},"children":[{"type":"text","value":"useRoute"}]},{"type":"text","value":" composable returns the current route and must be called in a "},{"type":"element","tag":"prose-code-inline","props":{},"children":[{"type":"text","value":"setup"}]},{"type":"text","value":" function, plugin, or route middleware."}]},{"type":"text","value":"\n"},{"type":"element","tag":"prose-paragraph","props":{},"children":[{"type":"text","value":"Within the template of a Vue component, you can access the route using "},{"type":"element","tag":"prose-code-inline","props":{},"children":[{"type":"text","value":"$route"}]},{"type":"text","value":"."}]},{"type":"text","value":"\n"},{"type":"element","tag":"prose-h2","props":{"id":"example"},"children":[{"type":"element","tag":"prose-a","props":{"href":"#example"},"children":[{"type":"text","value":"Example"}]}]},{"type":"text","value":"\n"},{"type":"element","tag":"prose-paragraph","props":{},"children":[{"type":"text","value":"In the following example, we call an API via "},{"type":"element","tag":"prose-code-inline","props":{},"children":[{"type":"text","value":"useFetch"}]},{"type":"text","value":" using a dynamic page parameter - "},{"type":"element","tag":"prose-code-inline","props":{},"children":[{"type":"text","value":"slug"}]},{"type":"text","value":" - as part of the URL."}]},{"type":"text","value":"\n"},{"type":"element","tag":"prose-code","props":{},"children":[{"type":"element","tag":"span","props":{"className":["filename"]},"child