    "graphql": "^16.0.1",
    "graphql-middleware": "^6.1.12",
    "graphql-shield": "^7.5.0",
    "helmet": "^4.1.0",
    "http-status": "^1.4.0",
    "joi": "^17.3.0",
    "js-base64": "^3.7.2",
    "js-cookie": "^3.0.1",
    "jsonwebtoken": "^8.5.1",
    "mitt": "^3.0.0",
    "moment": "^2.29.1",
    "moment-mini": "^2.24.0",
    "mongoose": "^5.7.7",
    "morgan": "^1.9.1",
    "nodemailer": "^6.3.1",
    "numeral": "^2.0.6",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "path-to-regexp": "^6.2.0",
    "query-string": "^7.0.1",
    "react": "^17.0.2",
