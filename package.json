{
  "name": "pangu",
  "private": true,
  "workspaces": [
    "web/*"
  ],
  "scripts": {
    "build": "concurrently \"pnpm build:web\" \"pnpm build:server\"",
    "build:docs": "cd docs && yarn build",
    "build:server": "rimraf build/* && tsc -p src/tsconfig.json",
    "build:web": "pnpm run -C web --parallel --filter \"@pangu/*\" build",
    "install:docs": "cd docs && yarn install",
    "lint": "vue-cli-service lint",
    "prepare": "husky install",
    "server:dev": "nodemon",
    "server:prod": "pm2 start ecosystem.config.json",
    "start": "cross-env NODE_ENV=production node ./bin/www.js",
    "test": "jest -i --colors --verbose --detectOpenHandles --config=jest.config.js",
    "test:watch": "jest -i --watchAll --config=jest.config.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^6.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "express-mongo-sanitize": "^2.0.0",
    "express-rate-limit": "^5.0.0",
    "express-session": "^1.17.2",
    "graphql": "^15.8.0",
    "graphql-middleware": "^6.1.12",
    "graphql-shield": "^7.5.0",
    "helmet": "^4.1.0",
    "http-status": "^1.4.0",
    "joi": "^17.3.0",
    "js-base64": "^3.7.2",
    "js-cookie": "^3.0.1",
    "jsonwebtoken": "^8.5.1",
    "mitt": "^3.0.0",
    "moment": "^2.29.1",
    "moment-mini": "^2.24.0",
    "mongoose": "^5.7.7",
    "morgan": "^1.9.1",
    "nodemailer": "^6.3.1",
    "numeral": "^2.0.6",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "query-string": "^7.0.1",
    "redis": "^4.0.6",
    "resize-detector": "^0.3.0",
    "swagger-jsdoc": "^6.0.8",
    "swagger-ui-express": "^4.1.6",
    "validator": "^13.0.0",
    "vue": "^3.2.31",
    "winston": "^3.2.1",
    "ws": "^8.3.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/connect-redis": "^0.0.17",
    "@types/cors": "^2.8.12",
    "@types/echarts": "^4.6.6",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.0.1",
    "@types/js-cookie": "^3.0.1",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.11",
