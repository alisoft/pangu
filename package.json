{
  "name": "pangu",
  "version": "0.1.0",
  "private": true,
  "workspaces": {
    "packages": [
      "web/*",
      "desktop/*",
      "actions/*"
    ],
    "nohoist": [
      "**/electron",
      "**/electron/**",
      "**/electron-builder",
      "**/electron-builder/**"
    ]
  },
  "scripts": {
    "build": "npm-run-all --parallel build:web build:server",
    "build:web": "npm-run-all --parallel build:admin build:mobile build:home",
    "build:admin": "yarn workspace @pangu/admin build",
    "build:mobile": "yarn workspace @pangu/mobile build",
    "build:home": "yarn workspace @pangu/home build",
    "build:server": "rimraf build/* && tsc -p src/tsconfig.json",
    "build:actions": "yarn workspace desktop-release-action build",
    "build:desktop": "yarn workspace electron-app build",
    "install:docs": "cd docs && yarn install",
    "build:docs": "cd docs && yarn generate",
    "install:mobile": "cd mobile/pangu-app && yarn install",
    "install:mobile:pods": "cd mobile/pangu-app && yarn install:pods",
    "build:android:apk": "cd mobile/pangu-app && yarn build:android:apk",
    "build:android:bundle": "cd mobile/pangu-app && yarn build:android:bundle",
    "lint": "vue-cli-service lint",
    "prepare": "husky install",
    "start": "cross-env NODE_ENV=production node ./bin/www.js",
    "server:dev": "nodemon",
    "server:prod": "pm2 start ecosystem.config.json",
    "test": "jest -i --colors --verbose --detectOpenHandles --config=jest.config.js",
    "test:watch": "jest -i --watchAll --config=jest.config.js",
    "ios": "cd mobile/pangu-app && yarn ios",
    "android": "cd mobile/pangu-app && yarn android",
    "postinstall": "yarn workspace electron-app postinstall"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^6.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "echarts": "^4.9.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "express-mongo-sanitize": "^2.0.0",
    "express-rate-limit": "^5.0.0",
